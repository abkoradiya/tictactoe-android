<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<TextView
			android:text="@string/join_game"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="46dp"
			android:id="@+id/textView2"
			android:textSize="24sp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"/>

	<EditText
			android:layout_width="145dp"
			android:layout_height="wrap_content"
			android:inputType="number|numberDecimal"
			android:ems="10"
			android:id="@+id/edtIPAddress"
			android:digits="0123456789."
			android:text="255.255.255.255"
			android:layout_alignBaseline="@+id/textView3" android:layout_alignBottom="@+id/textView3"
			android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
			android:layout_marginRight="42dp" android:layout_marginEnd="42dp"/>
	<TextView
			android:text="Network Address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="61dp" android:id="@+id/textView3"
			android:layout_below="@+id/textView2" android:layout_toLeftOf="@+id/textView2"
			android:layout_toStartOf="@+id/textView2"/>
	<EditText
			android:layout_width="60dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:layout_marginTop="17dp" android:id="@+id/edtPort"
			android:text="12345" android:layout_below="@+id/edtIPAddress" android:layout_alignLeft="@+id/edtIPAddress"
			android:layout_alignStart="@+id/edtIPAddress"/>
	<TextView
			android:text="Network Port"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView5"
			android:layout_alignBaseline="@+id/edtPort" android:layout_alignBottom="@+id/edtPort"
			android:layout_alignLeft="@+id/textView3" android:layout_alignStart="@+id/textView3"/>
	<Button
			android:text="Join Game"
			android:id="@+id/btnJoinGame"
			android:layout_width="150dp" android:layout_height="60dp"
			android:background="@android:color/holo_green_dark" android:textStyle="bold|italic"
			android:elevation="0dp" android:textSize="18sp"
			android:layout_marginTop="33dp" android:layout_below="@+id/textView5"
			android:layout_centerHorizontal="true"/>
</RelativeLayout>