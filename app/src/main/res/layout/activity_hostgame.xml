<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<TextView
			android:text="@string/host_game"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="42dp"
			android:id="@+id/textView2"
			android:textSize="24sp"
			android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

	<Spinner
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:id="@+id/spinnerHostIPAddress"
			android:layout_marginTop="45dp"
			android:entries="@array/temp_ip_array" android:layout_below="@+id/textView2"
			android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
			android:layout_marginRight="28dp" android:layout_marginEnd="28dp"/>
	<TextView
			android:text="Host on Address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView4"
			android:layout_alignBottom="@+id/spinnerHostIPAddress" android:layout_toLeftOf="@+id/textView2"
			android:layout_toStartOf="@+id/textView2" android:layout_marginBottom="11dp"/>

	<EditText
			android:layout_width="60dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/edtHostPort"
			android:text="12345"
			android:layout_alignBaseline="@+id/textView5" android:layout_alignBottom="@+id/textView5"
			android:layout_alignLeft="@+id/spinnerHostIPAddress" android:layout_alignStart="@+id/spinnerHostIPAddress"/>
	<TextView
			android:text="Network Port"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView5"
			android:layout_below="@+id/spinnerHostIPAddress" android:layout_alignLeft="@+id/textView4"
			android:layout_alignStart="@+id/textView4" android:layout_marginTop="36dp"/>
	<Button
			android:text="Host Game"
			android:id="@+id/btnHostGame"
			android:layout_width="200dp" android:layout_height="70dp"
			android:layout_marginTop="36dp"
			android:background="@android:color/holo_green_dark" android:textStyle="bold|italic"
			android:textSize="20sp"
			android:layout_below="@+id/edtHostPort" android:layout_centerHorizontal="true"/>

</RelativeLayout>